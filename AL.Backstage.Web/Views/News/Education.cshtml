@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    @Styles.Render("~/Content/css/umeditor")
    @Scripts.Render("~/bundles/umeditor")
}

<div id="ePanel" class="easyui-panel" title="教育动态" style="padding:10px;">
    <div id="list">
    <table>
        <tr>
            <td>教育动态标题：</td>
            <td><input class="easyui-searchbox" data-options="searcher:doSearch" style="width:300px"/></td>
        </tr>
    </table>
    <table id="dg" class="easyui-datagrid" toolbar="#toolbar" pagination="true"
            rownumbers="true" fitColumns="true" singleSelect="true">
        <thead>
            <tr>
                <th field="title" width="350">教育动态标题</th>
                <th field="Name" width="100">发布人</th>
                <th field="Price" width="120">发布时间</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>关于公布“张家港市社区教育讲师团师资库”的通知</td><td>编辑甲</td><td>2014-06-25</td>
            </tr>
            <tr>
                <td>2014年张家港市全民终身学习活动周</td><td>编辑乙</td><td>2014-06-25</td>
            </tr>
        </tbody>
    </table>
    <div id="toolbar">
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="add()">发布教育动态</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="edit()">修改教育动态</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="destroy()">删除教育动态</a>
    </div>
    </div>    
    <div id="edit" style="display:none">
        <form id="form" method="post">
            <table cellpadding="5">
                <tr>
                    <td>标题：</td>
                    <td><input class="easyui-validatebox" type="text" name="title" data-options="required:true" style="width:500px;"></input></td>
                </tr>
                <tr>
                    <td>内容：</td>
                    <td><script type="text/plain" id="editor" style="width:600px;height:240px;"></script></td>
                </tr>
            </table>
        </form>
        <div style="text-align:center;padding:5px">
            <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-ok" onclick="save()">提交</a>
            <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-cancel" onclick="cancel()">取消</a>
        </div>
    </div>
    
</div>

@section scripts{
    <script>
        var url;
        function doSearch(value){
            
        }
        function add() {
            $("#form").form("clear");
            $("#list").hide();
            $("#edit").show();
        }
        function edit() {
            var row = $('#dg').datagrid('getSelected');
            if (row) {
                $('#form').form('load', row);
                $("#list").hide();
                $("#edit").show();
            } else {
                $.messager.alert('提示', '请选择要修改的教育动态!');
            }
        }
        function destroy() {
            var row = $('#dg').datagrid('getSelected');
            if (row) {
                $.messager.confirm('确认', '确认删除选中的教育动态?', function (r) {
                    if (r) {
                        $.post('destroy_user.php', { id: row.id }, function (result) {
                            if (result.success) {
                                $('#dg').datagrid('reload');    // reload the user data
                            } else {
                                $.messager.show({    // show error message
                                    title: 'Error',
                                    msg: result.errorMsg
                                });
                            }
                        }, 'json');
                    }
                });
            } else {
                $.messager.alert('提示', '请选择要删除的教育动态!');
            }
        }
        function cancel() {
            $("#edit").hide();
            $("#list").show();
        }

        var um = UM.getEditor('editor');
    </script>
}
